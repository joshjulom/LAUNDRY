# SMS Configuration
# Choose your SMS provider: twilio, nexmo, aws_sns
SMS_PROVIDER=twilio

# ==========================================
# TWILIO
# ==========================================
SMS_TWILIO_ACCOUNT_SID=your_account_sid_here
SMS_TWILIO_AUTH_TOKEN=your_auth_token_here
SMS_TWILIO_PHONE=+1234567890

# ==========================================
# NEXMO/VONAGE
# ==========================================
SMS_NEXMO_API_KEY=your_api_key_here
SMS_NEXMO_API_SECRET=your_api_secret_here
SMS_NEXMO_FROM=YourBrand

# ==========================================
# AWS SNS
# ==========================================
SMS_AWS_ACCESS_KEY=your_access_key_here
SMS_AWS_SECRET_KEY=your_secret_key_here
SMS_AWS_REGION=us-east-1
